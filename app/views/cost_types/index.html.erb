<% content_for :title, "Cost types" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div>
    <h1>Tipo de custo</h1>
    <%= link_to "Novo tipo de custo", new_cost_type_path, class: "btn btn-primary" %>
  </div>

  <div id="cost_types">
    <% if @cost_types.any? %>
      <% @cost_types.each do |cost_type| %>
        <%= render "table_row", cost_type: cost_type %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No cost types found.</p>
    <% end %>
  </div>
</div>
