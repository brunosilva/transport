<% content_for :title, "Trucks" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div>
    <h1>Cavalo</h1>
    <%= link_to "Novo cavalo", new_truck_path, class: "btn btn-primary" %>
  </div>

  <div id="trucks" class="">
    <% if @trucks.any? %>
      <% @trucks.each do |truck| %>
        <%= render 'table_row', truck: truck %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No trucks found.</p>
    <% end %>
  </div>
</div>
