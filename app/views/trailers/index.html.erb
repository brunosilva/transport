<% content_for :title, "Trailers" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div>
    <h1>Reboque</h1>
    <%= link_to "Novo reboque", new_trailer_path, class: "btn btn-primary" %>
  </div>

  <div id="trailers">
    <% if @trailers.any? %>
      <% @trailers.each do |trailer| %>
        <%= render "table_row", trailer: trailer %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No trailers found.</p>
    <% end %>
  </div>
</div>
