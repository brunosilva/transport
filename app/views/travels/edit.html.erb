<% content_for :title, "Editing travel" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing travel</h1>

  <%= render "form", travel: @travel %>

  <%= link_to "voltar", travels_path %>
</div>


<div class="card">
  <div class="card-header">
    Custos
  </div>
  <div class="card-body">
    <div class="mt-3">
      <%= link_to "+ Add custo", new_cost_path(travel_id: @travel.id), class: "btn btn-success" %>

      <div class="row mt-3">
        <%= render 'costs/table_row_cost', costs: @travel.costs.only_deficit, credits: @travel.costs.only_credit %>
      </div>
    </div>
  </div>
</div>
