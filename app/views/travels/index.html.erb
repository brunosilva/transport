<% content_for :title, "Travels" %>

<div class="w-full">
  <% if notice.present? %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div>
    <h1>Viagem</h1>
    <%= link_to "Nova viagem", new_travel_path, class: "btn btn-primary" %>
  </div>


<div class=" mb-5">
  <% if @travels.any? %>
    <% @travels.each do |travel| %>
      <div class="card mt-3">
        <div class="card-header">
          Viagem
        </div>
        <div class="card-body">
          <div>
            <%= render 'table_row', travel: travel %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center my-10">No travels found.</p>
  <% end %>
</div>
