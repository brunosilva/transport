<h4 class="card-text"><%= vehicle.truck.name %> - <%= vehicle.truck.plate %></h4>
<p class="card-text"><%= vehicle.description %></p>

<div class="flex">
    <%= link_to "Editar", edit_vehicle_path(vehicle), class: "btn btn-info" %>
    <%= button_to "Excluir", vehicle, method: :delete, class: "btn btn-danger mx-2", data: { turbo_confirm: "Are you sure?" } %>
</div>
